<h1>Listing Students</h1>

<%= link_to "New-Student's",new_student_path %>

<table>
    <thead>
    <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Age</th>
    <th>Date of Birth</th>
    <th>Address</th>
    <th>Student Fees </th>
    <th colspan="3">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
    <tr>
        <th><%= student.first_name %></th>
        <th><%= student.last_name %></th>
        <th><%= student.email %></th>
        <th><%= student.age %></th>
        <th><%= student.date_of_birth %></th>
        <th><%= student.address %></th>
        <th><%= student.stud_fees %></th>
        <th><%= link_to "Show",student %></th>
        <th><%= link_to "Edit",edit_student_path(student) %></th>
        <th><%= button_to 'Destroy',student, method: :delete, onclick: "return confirm('Are you
        sure?')" %></th>


    </tr>
    <% end %>
    </tbody>
</table>link_to "Delete",student,data:{turbo_method: :delete ,turbo_confirm: "Are you Sure"} 